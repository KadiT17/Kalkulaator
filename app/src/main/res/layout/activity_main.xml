<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6495ed"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:textAllgnment="center"
    android:weightSum="1"
    tools:context="com.example.opilane.kalkulaator.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.07"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="@string/kaks"
        android:textColor="#000000"
        android:textColorLink="?android:attr/editTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editOp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Sisesta esimesene number"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="18sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editOp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Sisesta teine number"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

        <Button
            android:id="@+id/Liida"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="+"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Lahuta"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="-"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Jagada"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="/"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Korrutada"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="*"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Kustutada"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text=""
            android:textColor="#000000"/>

    <LinearLayout/>
    <TextView
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:id="@+id/textView1"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/tulemus"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textColorLink="?android:attr/editTextColor"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tulemus"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:text="0.00"
        android:textColor="#000000"
        android:textSize="18sp"
        />


    <LinearLayout/>